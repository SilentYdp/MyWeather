<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/weather_current"
    android:layout_centerInParent="true"
    android:layout_marginTop="5dp">
    <!--天气情况图例-->
    <ImageView
        android:id="@+id/weather_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/biz_plugin_weather_qing" />
    <!--今日星期-->
    <TextView
        android:id="@+id/week_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/weather_img"
        android:singleLine="true"
        android:text="今天 星期三"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <!--温度范围-->
    <TextView
        android:id="@+id/weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_today"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/weather_img"
        android:singleLine="true"
        android:text="-2℃-7℃"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <!--天气状况-->
    <TextView
        android:id="@+id/weather_climate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_temperature"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/weather_img"
        android:singleLine="true"
        android:text="多云转晴"
        android:textSize="20sp"
        android:textColor="@android:color/white" />
    <!--风力信息-->
    <TextView
        android:id="@+id/weather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_climate"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/weather_img"
        android:singleLine="true"
        android:text="微风"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>